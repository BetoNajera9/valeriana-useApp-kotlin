<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            android:background="@drawable/card_style"
            android:padding="5dp">

            <TextView
                android:id="@+id/title_prescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Paracetamol"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_clock"/>
                <TextView
                    android:id="@+id/time_prescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 veces por 5 dias"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginHorizontal="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_medicine"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/quantity_prescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="500 mg."/>

            </LinearLayout>

            <TextView
                android:id="@+id/description_prescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/nunito_regular"
                android:text="Se necesita una extracciÃ³n del 2do molar debido a una fractura."/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>